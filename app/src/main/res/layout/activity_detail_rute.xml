<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".DetailRute">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/primary"
        android:layout_height="55dp">
        <ImageView
            android:id="@+id/backActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_back_activity"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/lato_medium"
            android:text="Detail Rute"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingStart="15dp"
            android:paddingBottom="54dp"
            android:paddingEnd="15dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/rute_pos"
                android:adjustViewBounds="true"
                android:background="@color/stroke"
                />
            <TextView
                android:layout_marginTop="16dp"
                android:justificationMode="inter_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_rute"
                android:fontFamily="@font/lato_medium"
                android:textSize="14sp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rute"
                        android:fontFamily="@font/lato_bold"
                        android:textSize="14sp"
                        android:textColor="@color/black"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:background="@drawable/bg_content_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginRight="16dp"
                            android:layout_width="45dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/pos1"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Basecamp - Pos 1 (Lembah Kesunyian)"
                                android:fontFamily="@font/lato_bold"
                                android:textColor="@color/black"
                                android:textSize="14sp"/>
                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/lato_medium"
                                    android:textColor="@color/black"
                                    android:text="Estimasi waktu tempuh: 15 menit"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:background="@drawable/bg_content_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginRight="16dp"
                            android:layout_width="45dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/pos_1"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pos 1 (Lembah Kesunyian)"
                                android:fontFamily="@font/lato_bold"
                                android:textColor="@color/black"
                                android:textSize="14sp"/>
                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/lato_medium"
                                    android:textColor="@color/black"
                                    android:text="Estimasi waktu tempuh: 1.5 - 2 jam"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:background="@drawable/bg_content_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginRight="16dp"
                            android:layout_width="45dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/pos_3"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pos 2 (Lembah Ketresnan)"
                                android:fontFamily="@font/lato_bold"
                                android:textColor="@color/black"
                                android:textSize="14sp"/>
                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/lato_medium"
                                    android:textColor="@color/black"
                                    android:text="Estimasi waktu tempuh: 1.5 jam"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:background="@drawable/bg_content_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginRight="16dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/pos_3"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pos 3"
                            android:fontFamily="@font/lato_bold"
                            android:textColor="@color/black"
                            android:textSize="14sp"/>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:fontFamily="@font/lato_medium"
                                android:textColor="@color/black"
                                android:text="Estimasi waktu tempuh: 1.5 jam"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout><RelativeLayout
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:background="@drawable/bg_content_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginRight="16dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/pos_4"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pos 4"
                            android:fontFamily="@font/lato_bold"
                            android:textColor="@color/black"
                            android:textSize="14sp"/>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:fontFamily="@font/lato_medium"
                                android:textColor="@color/black"
                                android:text="Estimasi waktu tempuh: 1.5 jam"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout><RelativeLayout
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:background="@drawable/bg_content_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginRight="16dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/puncak"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Puncak"
                            android:fontFamily="@font/lato_bold"
                            android:textColor="@color/black"
                            android:textSize="14sp"/>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:fontFamily="@font/lato_medium"
                                android:textColor="@color/black"
                                android:text="Estimasi waktu tempuh: 2- 3 jam"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>